{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Clang 17.0.6 x86_64-pc-linux-gnu",
            "description": "Using compilers: C = /usr/bin/clang-17, CXX = /usr/bin/clang++-17",
            "binaryDir": "${sourceDir}/build_debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-17",
