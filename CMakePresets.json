            "binaryDir": "${sourceDir}/build_release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-17",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-17",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1",
                "CMAKE_CXX_STANDARD": "20",
